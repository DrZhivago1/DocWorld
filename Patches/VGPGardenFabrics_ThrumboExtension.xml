<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Add animal wool from Thrumbo Extension to VGP loom "blended wool" recipe-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VGP Garden Fabrics</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>Thrumbo Extension</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <li Class="PatchOperationAdd">
            <xpath>Defs/RecipeDef[defName="Makeblendedwool"]/ingredients/li/filter/thingDefs</xpath>
            <value>
              <li>ThrumboWool</li>
            </value>
          </li>
          <li Class="PatchOperationAdd">
            <xpath>Defs/RecipeDef[defName="Makeblendedwool"]/fixedIngredientFilter/thingDefs</xpath>
            <value>
              <li>ThrumboWool</li>
            </value>
          </li>
        </operations>
      </match>
    </match>
  </Operation>
</Patch>
