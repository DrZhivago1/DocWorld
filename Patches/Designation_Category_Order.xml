<Patch>
  <!--This file will contain all patches that replace/change the visual location of Designation Categories in the architect menu for Vanilla and Mods-->

  <!--==========
    VANILLA
    ==========-->

  <!--Alphabetize Vanilla Tabs, except for maybe like a couple that I like in their places. Stop judging.-->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Floors"]/order</xpath>
        <value>
          <order>700</order>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Furniture"]/order</xpath>
        <value>
          <order>600</order>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Power"]/order</xpath>
        <value>
          <order>500</order>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Production"]/order</xpath>
        <value>
          <order>400</order>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Joy"]/order</xpath>
        <value>
          <order>300</order>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Security"]/order</xpath>
        <value>
          <order>250</order>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Ship"]/order</xpath>
        <value>
          <order>200</order>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Structure"]/order</xpath>
        <value>
          <order>100</order>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Temperature"]/order</xpath>
        <value>
          <order>50</order>
        </value>
      </li>
      <li Class="PatchOperationReplace">
        <xpath>/Defs/DesignationCategoryDef[defName="Misc"]/order</xpath>
        <value>
          <order>25</order>
        </value>
      </li>
    </operations>
  </Operation>

  <!--==========
    Colony Leadership
    ==========-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Colony Leadership</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/DesignationCategoryDef[defName="LeadershipModTab"]/order</xpath>
          <value>
            <order>560</order>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

  <!--==========
    LWM's DEEP STORAGE
    ==========-->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>LWM's Deep Storage</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>/Defs/DesignationCategoryDef[defName="LWM_DS_Storage"]/order</xpath>
      <value>
        <order>150</order>
      </value>
    </match>
  </Operation>

</Patch>