<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Make Slingshot craftable with logs and leathers/Textiles, instead of lumber and steel-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>RT's Weapon Pack Reloaded (1.0)</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>Expanded Woodworking</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <!--RecipeDefs_Ranged-->
          <li Class="PatchOperationReplace">
            <xpath>Defs/RecipeDef[defName="SlingshotCraft"]/ingredients</xpath>
            <value>
              <ingredients>
                <li>
                  <filter>
                    <categories>
                      <li>Leathers</li>
                      <li>Textiles</li>
                    </categories>
                  </filter>
                  <count>2</count>
                </li>
                <li>
                  <filter>
                    <categories>
                      <li>WoodTypes</li>
                    </categories>
                  </filter>
                  <count>1</count>
                </li>
              </ingredients>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>Defs/RecipeDef[defName="SlingshotCraft"]/fixedIngredientFilter</xpath>
            <value>
              <fixedIngredientFilter>
                <categories>
                  <li>Textiles</li>
                  <li>Leathers</li>
                  <li>WoodTypes</li>
                </categories>
              </fixedIngredientFilter>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>Defs/RecipeDef[defName="SlingshotCraft"]/recipeUsers</xpath>
            <value>
              <recipeUsers>
                <li>CraftingSpot</li>
                <li>FueledSmithy</li>
                <li>ElectricSmithy</li>
              </recipeUsers>
            </value>
          </li>
        </operations>
      </match>
    </match>
  </Operation>
</Patch>
