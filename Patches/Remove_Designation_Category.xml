<Patch>
   <!--This file will contain all patches that remove Designation Categories for Vanilla and Mods-->

   <!--==========
    VANILLA
    ==========-->

   <!--Animals Designation Category Removal, if mods not found. #animalbeds-->
   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>Large Animal Beds</li>
         <li>【1.1】Animalstrawbed</li>
         <li>[sd] Chicken Nest (Continued)</li>
         <li>RIMkea</li>
      </mods>
      <nomatch Class="PatchOperationRemove">
         <xpath>/Defs/DesignationCategoryDef[defName="DZ_Animals"]</xpath>
      </nomatch>
   </Operation>

   <!--Fences Designation Category Removal, if mods not found. #fence-->
   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>Extended Woodworking</li>
         <li>Gloomy Vanilla</li>
         <li>Gloomy Vanilla Overhaul</li>
         <li>Vanilla Fences</li>
         <li>Vanilla Fences (Fence Tab)</li>
         <li>Fences And Floors</li>
         <li>Fences And No Floors</li>
         <li>DDA Security and More</li>
         <li>Lord of the Rims - Elves</li>
      </mods>
      <nomatch Class="PatchOperationRemove">
         <xpath>/Defs/DesignationCategoryDef[defName="DZ_Fences"]</xpath>
      </nomatch>
   </Operation>

   <!--Industrial Designation Category Removal, if mods not found. #industrial-->
   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>Industrial Rollers</li>
         <li>Rimefeller</li>
         <li>Rimatomics</li>
      </mods>
      <nomatch Class="PatchOperationRemove">
         <xpath>/Defs/DesignationCategoryDef[defName="DZ_Industrial"]</xpath>
      </nomatch>
   </Operation>

   <!--Storage Designation Category Removal, if mods found. #storage-->
   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>LWM's Deep Storage</li>
      </mods>
      <match Class="PatchOperationRemove">
         <xpath>/Defs/DesignationCategoryDef[defName="DZ_Storage"]</xpath>
      </match>
   </Operation>

</Patch>