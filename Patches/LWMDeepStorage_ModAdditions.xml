<Patch>
    <!--Add storage support for various mods-->

    <!--=====Vanilla=====-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>LWM's Deep Storage</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="LWM_Food_Basket"]/building/fixedStorageSettings</xpath>
                    <value>
                        <fixedStorageSettings>
                            <filter>
                                <categories>
                                    <li>Foods</li>
                                </categories>
                                <disallowedCategories>
                                    <li>FoodMeals</li>
                                </disallowedCategories>
                                <thingDefs>
                                    <li>MedicineHerbal</li>
                                </thingDefs>
                            </filter>
                        </fixedStorageSettings>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
    <!--=====Ceramics=====-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>LWM's Deep Storage</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>[1.0] Ceramics</li>
            </mods>
            <match Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="LWM_DeepStorage_Skip"]/building/fixedStorageSettings/filter/thingDefs</xpath>
                <value>
                    <li>N7_Porcelain</li>
                </value>
            </match>
        </match>
    </Operation>
    <!--=====Simple Concrete=====-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>LWM's Deep Storage</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>Simple Concrete</li>
            </mods>
            <match Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="LWM_DeepStorage_Skip"]/building/fixedStorageSettings/filter/thingDefs</xpath>
                <value>
                    <li>D9Cement</li>
                    <li>D9Concrete</li>
                </value>
            </match>
        </match>
    </Operation>
    <!--=====VGP Garden Fabrics=====-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>LWM's Deep Storage</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>VGP Garden Fabrics</li>
            </mods>
            <match Class="PatchOperationFindMod">
                <mods>
                    <li>SeedsPlease</li>
                </mods>
                <nomatch Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="LWM_Food_Basket"]/building/fixedStorageSettings/filter/categories</xpath>
                    <value>
                        <li>GardenFabrics</li>
                    </value>
                </nomatch>
            </match>
        </match>
    </Operation>
</Patch>