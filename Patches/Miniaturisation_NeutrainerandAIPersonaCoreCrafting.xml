<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--NeurotrainerWorkTable-->

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "NeurotrainerWorkTable"]/minifiedDef</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "NeurotrainerWorkTable"]</xpath>
				<value>
					<minifiedDef>MinifiedThing</minifiedDef>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "NeurotrainerWorkTable"]/thingCategories</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "NeurotrainerWorkTable"]</xpath>
				<value>
					<thingCategories>
						<li>BuildingsMisc</li>
					</thingCategories>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "NeurotrainerWorkTable"]/statBases/Mass</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "NeurotrainerWorkTable"]/statBases</xpath>
				<value>
					<Mass>20</Mass>
				</value>
			</li>
		</operations>
	</Operation>


</Patch>
