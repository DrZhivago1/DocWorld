<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Make Repair Workbench minifiable-->
  <!--Repair Workbench-->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "ElectricTableRepair"]/minifiedDef</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "ElectricTableRepair"]</xpath>
        <value>
          <minifiedDef>MinifiedThing</minifiedDef>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "ElectricTableRepair"]/thingCategories</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "ElectricTableRepair"]</xpath>
        <value>
          <thingCategories>
            <li>BuildingsMisc</li>
          </thingCategories>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "ElectricTableRepair"]/statBases/Mass</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "ElectricTableRepair"]/statBases</xpath>
        <value>
          <Mass>20</Mass>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>
