
<Patch>
  <!--Make shield generators minifiable-->
  <!--=====Building_ShieldStandard=====-->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "Building_ShieldStandard"]/minifiedDef</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "Building_ShieldStandard"]</xpath>
        <value>
          <minifiedDef>MinifiedThing</minifiedDef>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "Building_ShieldStandard"]</xpath>
        <value>
          <thingCategories>
            <li>BuildingsMisc</li>
          </thingCategories>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "Building_ShieldStandard"]</xpath>
        <value>
          <statBases>
            <Mass>1000</Mass>
          </statBases>
        </value>
      </li>
    </operations>
  </Operation>
