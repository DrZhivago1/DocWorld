<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Make various power sources minifiable-->
  <!--AdvancedWindTurbine-->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "sd_adv_powergen_adv_wind_turbine"]/minifiedDef</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "sd_adv_powergen_adv_wind_turbine"]</xpath>
        <value>
          <minifiedDef>MinifiedThing</minifiedDef>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "sd_adv_powergen_adv_wind_turbine"]/thingCategories</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "sd_adv_powergen_adv_wind_turbine"]</xpath>
        <value>
          <thingCategories>
            <li>BuildingsMisc</li>
          </thingCategories>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "sd_adv_powergen_adv_wind_turbine"]/statBases/Mass</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "sd_adv_powergen_adv_wind_turbine"]/statBases</xpath>
        <value>
          <Mass>75</Mass>
        </value>
      </li>
    </operations>
  </Operation>
