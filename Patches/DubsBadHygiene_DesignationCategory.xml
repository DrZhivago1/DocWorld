<Patch>

  <!--Dubs Hygiene personal preference settings, remove Misc category and rearrange-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Dubs Bad Hygiene</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <!--Designation Category changes-->
        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingDef[defName="plumbingValve" or defName="AirConOutdoorUnit" or defName="LitterBox" or defName="KitchenSink" or defName="WashingMachine"]/designationCategory</xpath>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[@Name="BaseAircon" or @Name="BasedHeating" or @Name="BaseRadiator" or defName="SolarHeater" or defName="airPipe"]/designationCategory</xpath>
          <value>
            <designationCategory>Temperature</designationCategory>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="ToiletStallDoor"]</xpath>
          <value>
            <designationCategory>Structure</designationCategory>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="CeilingFan" or defName="CeilingFanS"]/designationCategory</xpath>
          <value>
            <designationCategory>DZ_Lighting</designationCategory>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="FireSprinkler"]/designationCategory</xpath>
          <value>
            <designationCategory>Misc</designationCategory>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="IrrigationSprinkler" or defName="BiosolidsComposter"]/designationCategory</xpath>
          <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="IrrigationSprinkler" or defName="BiosolidsComposter"]/designationCategory</xpath>
            <value>
              <designationCategory>DZ_Husbandry</designationCategory>
            </value>
          </match>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="IrrigationSprinkler" or defName="BiosolidsComposter"]</xpath>
            <value>
              <designationCategory>DZ_Husbandry</designationCategory>
            </value>
          </nomatch>
        </li>
        <!--Designation Categories Removal-->
        <li Class="PatchOperationRemove">
          <xpath>Defs/DesignationCategoryDef[defName="HygieneMisc"]</xpath>
        </li>
        <!--Research Prereqs-->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="CeilingFan" or defName="CeilingFanS"]/researchPrerequisites</xpath>
          <value>
            <li>Electricity</li>
          </value>
        </li>
        <!--Create dropdown menus-->
        <li Class="PatchOperationAdd">
          <xpath>Defs</xpath>
          <value>
            <DesignatorDropdownGroupDef>
              <defName>DZ_CeilingFan</defName>
            </DesignatorDropdownGroupDef>
            <DesignatorDropdownGroupDef>
              <defName>DZ_Boilers</defName>
            </DesignatorDropdownGroupDef>
            <DesignatorDropdownGroupDef>
              <defName>DZ_Pumps</defName>
            </DesignatorDropdownGroupDef>
            <DesignatorDropdownGroupDef>
              <defName>DZ_Wells</defName>
            </DesignatorDropdownGroupDef>
          </value>
        </li>
        <!-- Apply dropdown menus -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="CeilingFan" or defName="CeilingFanS"][not(designatorDropdown)]</xpath>
          <value>
            <designatorDropdown>DZ_CeilingFan</designatorDropdown>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[comps/li/@Class="DubsBadHygiene.CompProperties_CompBoiler"][not(designatorDropdown)]</xpath>
          <value>
            <designatorDropdown>DZ_Boilers</designatorDropdown>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[comps/li/@Class="DubsBadHygiene.CompProperties_WaterPumpingStation"][not(designatorDropdown)]</xpath>
          <value>
            <designatorDropdown>DZ_Pumps</designatorDropdown>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[comps/li/@Class="DubsBadHygiene.CompProperties_WaterInlet"][not(designatorDropdown)]</xpath>
          <value>
            <designatorDropdown>DZ_Wells</designatorDropdown>
          </value>
        </li>
      </operations>
    </match>
  </Operation>


  <!--Test to see if Biosolids exist, move category with patch-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Dubs Bad Hygiene</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationTest">
          <success>Always</success>
          <xpath>Defs/ThingDef[defName="BiosolidFertilizer"]/designationCategory</xpath>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="BiosolidFertilizer"]/designationCategory</xpath>
          <value>
            <designationCategory>DZ_Husbandry</designationCategory>
          </value>
        </li>
      </operations>
    </match>
  </Operation>


</Patch>
