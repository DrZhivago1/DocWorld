<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--LoTR beds to bed category if '[sd] goodnight' is installed-->
  <!--=====Elves=====-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Lord of the Rims - Elves</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>[sd] goodnight</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="LotRE_ElvenRoyalBed" or defName="LotRE_ElvenBed"]</xpath>
            <value>
              <designationCategory>sd_beds</designationCategory>
            </value>
          </li>
        </operations>
      </match>
    </match>
  </Operation>
</Patch>
