<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Make various Vanilla items minifiable-->
  <!--Hopper-->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "Hopper"]/minifiedDef</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "Hopper"]</xpath>
        <value>
          <minifiedDef>MinifiedThing</minifiedDef>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "Hopper"]/thingCategories</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "Hopper"]</xpath>
        <value>
          <thingCategories>
            <li>BuildingsMisc</li>
          </thingCategories>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "Hopper"]/statBases/Mass</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "Hopper"]/statBases</xpath>
        <value>
          <Mass>10</Mass>
        </value>
      </li>
    </operations>
  </Operation>
