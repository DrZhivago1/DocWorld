<Patch>

  <!-- ======================= Vanilla Animals Expanded — Livestock =============================== -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VGP Garden Fabrics</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>Vanilla Animals Expanded — Livestock</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <li Class="PatchOperationAdd">
            <xpath>Defs/RecipeDef[defName="Makeblendedwool"]/ingredients/li/filter/thingDefs</xpath>
            <value>
              <li>AEXP_WoolBison</li>
              <li>AEXP_WoolSheep</li>
              <li>AEXP_WoolYak</li>
            </value>
          </li>
          <li Class="PatchOperationAdd">
            <xpath>Defs/RecipeDef[defName="Makeblendedwool"]/fixedIngredientFilter/thingDefs</xpath>
            <value>
              <li>AEXP_WoolBison</li>
              <li>AEXP_WoolSheep</li>
              <li>AEXP_WoolYak</li>
            </value>
          </li>
        </operations>
      </match>
    </match>
  </Operation>

