<Patch>
    <!-- IF Simple Chains: Leather is installed: Change_by_doing_what_is_stated -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Simple Chains: Leather</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Owl_TanningVat"]/comps/li[@Class="UniversalFermenter.CompProperties_UniversalFermenter"]/products/*/maxCapacity</xpath>
                    <value>
                        <maxCapacity>150</maxCapacity>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>