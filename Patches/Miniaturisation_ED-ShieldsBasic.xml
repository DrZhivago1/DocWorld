<?xml version="1.0" encoding="UTF-8"?>
<Patch>

<!--Building_ShieldStandard-->

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "Building_ShieldStandard"]/minifiedDef</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Building_ShieldStandard"]</xpath>
				<value>
					<minifiedDef>MinifiedThing</minifiedDef>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "Building_ShieldStandard"]/thingCategories</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Building_ShieldStandard"]</xpath>
				<value>
					<thingCategories>
						<li>BuildingsMisc</li>
					</thingCategories>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "Building_ShieldStandard"]/statBases/Mass</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Building_ShieldStandard"]/statBases</xpath>
				<value>
					<Mass>20</Mass>
				</value>
			</li>
		</operations>
	</Operation>

