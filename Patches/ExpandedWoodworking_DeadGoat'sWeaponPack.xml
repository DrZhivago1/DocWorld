<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Make some weapons craftable with logs instead of lumber-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Dead Goat's Weapon Pack</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>Expanded Woodworking</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <!--3dg_weapon_blowgun-->
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="dgBlowgun"]/stuffCategories</xpath>
            <value>
              <stuffCategories>
                <li>Metallic</li>
                <li>RawWoody</li>
                <li>Stony</li>
              </stuffCategories>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="dgBlowgunSolanine"]/stuffCategories</xpath>
            <value>
              <stuffCategories>
                <li>Metallic</li>
                <li>RawWoody</li>
                <li>Stony</li>
              </stuffCategories>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="3dg_blowgun_neurotoxin"]/stuffCategories</xpath>
            <value>
              <stuffCategories>
                <li>Metallic</li>
                <li>RawWoody</li>
                <li>Stony</li>
              </stuffCategories>
            </value>
          </li>
          <!--dg_Weapons_Melee-->
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="3dg_MeleeWeapon_Knuckles"]/stuffCategories</xpath>
            <value>
              <stuffCategories>
                <li>Metallic</li>
                <li>RawWoody</li>
                <li>Stony</li>
              </stuffCategories>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="3dg_MeleeWeapon_Staff"]/stuffCategories</xpath>
            <value>
              <stuffCategories>
                <li>Metallic</li>
                <li>RawWoody</li>
                <li>Stony</li>
              </stuffCategories>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="3dg_MeleeWeapon_Skullclub"]/stuffCategories</xpath>
            <value>
              <stuffCategories>
                <li>Metallic</li>
                <li>RawWoody</li>
                <li>Stony</li>
              </stuffCategories>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="3dg_MeleeWeapon_Macuahuitl"]/stuffCategories</xpath>
            <value>
              <stuffCategories>
                <li>Metallic</li>
                <li>RawWoody</li>
                <li>Stony</li>
              </stuffCategories>
            </value>
          </li>
          <!--dg_Weapons_Ranged
   <li Class="PatchOperationReplace">
   <xpath>/Defs/ThingDef[defName="3DG_StaffSling"]/stuffCategories</xpath>
   <value>
    <stuffCategories>
      <li>Metallic</li>
	    <li>RawWoody</li>
	    <li>Stony</li>
    </stuffCategories>
   </value>
   </li>-->
        </operations>
      </match>
    </match>
  </Operation>
</Patch>
