    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "SurgicalInstruments"]/statBases/Mass</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "SurgicalInstruments"]/statBases</xpath>
        <value>
