
<Patch>
  <!--Make surgical lamp, surgical instruments, and advanced multianalyzer minifiable-->
  <!--=====SurgicalLamp=====-->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "SurgicalLamp"]/minifiedDef</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "SurgicalLamp"]</xpath>
        <value>
          <minifiedDef>MinifiedThing</minifiedDef>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "SurgicalLamp"]</xpath>
        <value>
          <thingCategories>
            <li>BuildingsMisc</li>
          </thingCategories>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "SurgicalLamp"]</xpath>
        <value>
          <statBases>
            <Mass>5</Mass>
          </statBases>
        </value>
      </li>
    </operations>
  </Operation>
  <!--=====SurgicalInstruments=====-->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>Defs/ThingDef[defName = "SurgicalInstruments"]/minifiedDef</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "SurgicalInstruments"]</xpath>
        <value>
          <minifiedDef>MinifiedThing</minifiedDef>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "SurgicalInstruments"]</xpath>
        <value>
          <thingCategories>
            <li>BuildingsMisc</li>
          </thingCategories>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName = "SurgicalInstruments"]</xpath>
        <value>
          <statBases>
            <Mass>10</Mass>
          </statBases>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>
