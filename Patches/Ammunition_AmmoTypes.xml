<Patch>

    <!-- ===== Change from ThingDef restrictions to Category restrictions ===== -->
    <Operation Class='PatchOperationFindMod'>
        <mods>
            <li>Ammunition</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Replace ingredients with categories-->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/RecipeDef[defName="Make_PrimitiveAmmo"]/ingredients</xpath>
                    <value>
                        <ingredients>
                            <li>
                                <filter>
                                    <categories>
                                        <li>ResourcesRaw</li>
                                    </categories>
                                    <disallowedCategories>
                                        <li>PlantMatter</li>
                                    </disallowedCategories>
                                    <disallowedThingDefs>
                                        <li>Gold</li>
                                        <li>Silver</li>
                                        <li>Jade</li>
                                        <li>Plasteel</li>
                                        <li>Steel</li>
                                        <li>Uranium</li>
                                    </disallowedThingDefs>
                                </filter>
                                <count>10</count>
                            </li>
                            <li>
                                <filter>
                                    <categories>
                                        <li>Textiles</li>
                                    </categories>
                                </filter>
                                <count>5</count>
                            </li>
                        </ingredients>
                    </value>
                </li>
                <!--Replace fixedingredientFilter with category restrictions and disallow certain sub-categories-->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/RecipeDef[defName="Make_PrimitiveAmmo"]/fixedIngredientFilter</xpath>
                    <value>
                        <fixedIngredientFilter>
                            <categories>
                                <li>ResourcesRaw</li>
                                <li>Textiles</li>
                            </categories>
                            <disallowedCategories>
                                <li>PlantMatter</li>
                            </disallowedCategories>
                            <disallowedThingDefs>
                                <li>Gold</li>
                                <li>Silver</li>
                                <li>Jade</li>
                                <li>Plasteel</li>
                                <li>Steel</li>
                                <li>Uranium</li>
                            </disallowedThingDefs>
                        </fixedIngredientFilter>
                    </value>
                </li>
                <!--Edit label for ultimate immersion-->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/RecipeDef[defName="Make_PrimitiveAmmo"]/description</xpath>
                    <value>
                        <description>Make primitive ammo by combining textiles and raw resources.</description>
                    </value>
                </li>
            </operations>
        </match>

    </Operation>

    <!-- ===== Rim of Madness - Bones ===== -->
    <Operation Class='PatchOperationFindMod'>
        <mods>
            <li>Ammunition</li>
        </mods>
        <match Class='PatchOperationFindMod'>
            <mods>
                <li>Rim of Madness - Bones</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/RecipeDef[defName="Make_PrimitiveAmmo"]/ingredients//disallowedThingDefs</xpath>
                        <value>
                            <li>Bonecrete</li>
                            <li>BonePlastic</li>
                            <li>BoneChina</li>
                        </value>
                    </li>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/RecipeDef[defName="Make_PrimitiveAmmo"]/fixedIngredientFilter/disallowedThingDefs</xpath>
                        <value>
                            <li>Bonecrete</li>
                            <li>BonePlastic</li>
                            <li>BoneChina</li>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>

</Patch>