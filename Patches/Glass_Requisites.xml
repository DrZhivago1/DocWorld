<Patch>
    <!--This file will contain all patches that replace/change glass requirements for Vanilla and Mods using Glass+Lights as the base glass mod-->

    <!--==========
    Vanilla
    ==========-->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glass+Lights</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!--Lamps require glass-->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="StandingLampBase" or defName="SunLamp"]/costList</xpath>
                    <value>
                        <LargeCircularGlass>1</LargeCircularGlass>
                    </value>
                </li>
                <!--Minor grammar correction-->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="OutdoorGroundLamp"]/label</xpath>
                    <value>
                        <label>outdoor ground lamp</label>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="GLWallLightBase"]/costList</xpath>
                    <value>
                        <costList>
                            <Glass>1</Glass>
                            <Steel>10</Steel>
                        </costList>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

    <!--==========
    Ceiling Lights
    ==========-->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glass+Lights</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>Ceiling Lights</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <!--Ceiling light and Grow light require glass-->
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="Lighting_CeilingLight"]/costList</xpath>
                        <value>
                            <Steel>10</Steel>
                            <LargeCircularGlass>1</LargeCircularGlass>
                        </value>
                    </li>
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="Lighting_CeilingGrowLight"]/costList</xpath>
                        <value>
                            <Steel>30</Steel>
                            <Gold>15</Gold>
                            <ComponentIndustrial>1</ComponentIndustrial>
                            <LargeCircularGlass>1</LargeCircularGlass>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>

    <!--==========
    Glitter Tech
    ==========-->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glass+Lights</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>Glitter Tech</li>
                <li>Glitter Tech (No Surgery)</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <!--Floodlight requires glass-->
                    <li Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[defName="FloodLight"]/costList</xpath>
                        <value>
                            <LargeCircularGlass>1</LargeCircularGlass>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>

    <!--==========
    More Furniture
    ==========-->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glass+Lights</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>More Furniture [1.1]</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <!--Lamps and endtables require glass-->
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="ANON2StandingLampBase"]/costList</xpath>
                        <value>
                            <costList>
                                <Steel>15</Steel>
                                <LargeCircularGlass>1</LargeCircularGlass>
                            </costList>
                        </value>
                    </li>
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="Anon2EndTableLight"]/costList</xpath>
                        <value>
                            <costList>
                                <Steel>10</Steel>
                                <LargeCircularGlass>1</LargeCircularGlass>
                            </costList>
                        </value>
                    </li>
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="Anon2RoyalEndTableLight"]/costList</xpath>
                        <value>
                            <costList>
                                <Steel>10</Steel>
                                <Gold>15</Gold>
                                <LargeCircularGlass>1</LargeCircularGlass>
                            </costList>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>

    <!--==========
    RIMkea
    ==========-->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glass+Lights</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>RIMkea</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <!--Kageshain lamps require glass-->
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="RIKFleaLampBase"]</xpath>
                        <value>
                            <costList>
                                <Steel>20</Steel>
                                <Glass>1</Glass>
                            </costList>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>

    <!--==========
    Static Quality Plus
    ==========-->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glass+Lights</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>Static Quality Plus 1.2.2</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <!--Sun lamps require glass-->
                    <li Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[defName="PermaSunLamp"]/costList</xpath>
                        <value>
                            <LargeCircularGlass>4</LargeCircularGlass>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>

    <!--==========
    Vanilla Furniture Expanded
    ==========-->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glass+Lights</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>Vanilla Furniture Expanded</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <!--Lamps require glass-->
                    <li Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[defName="Light_ModernLamp" or defName="Light_Streetlamp"]/costList</xpath>
                        <value>
                            <LargeCircularGlass>1</LargeCircularGlass>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>

    <!--==========
    Vanilla Furniture Expanded - Spacer Module
    ==========-->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glass+Lights</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>Vanilla Furniture Expanded - Spacer Module</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <!--Lamps require glass-->
                    <li Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[defName="Light_SpacerLamp"]/costList</xpath>
                        <value>
                            <Glass>1</Glass>
                        </value>
                    </li>
                    <li Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[defName="Spacer_SunLamp"]/costList</xpath>
                        <value>
                            <Glass>5</Glass>
                        </value>
                    </li>
                    <!--Vanilla outdoor lamps have equal lighting and resource requirements-->
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="OutdoorGroundLamp" or defName="Spacer_OutdoorLamp"]/costList</xpath>
                        <value>
                            <costList>
                                <Steel>40</Steel>
                                <ComponentIndustrial>1</ComponentIndustrial>
                                <LargeCircularGlass>1</LargeCircularGlass>
                            </costList>
                        </value>
                    </li>
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="OutdoorGroundLamp"]/comps/li[@Class="CompProperties_Glower"]/glowRadius</xpath>
                        <value>
                            <glowRadius>8</glowRadius>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>

    <!--==========
    Wall Light
    ==========-->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Glass+Lights</li>
        </mods>
        <match Class="PatchOperationFindMod">
            <mods>
                <li>Wall Light</li>
            </mods>
            <match Class="PatchOperationSequence">
                <success>Always</success>
                <operations>
                    <!--Lamps require glass-->
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[@Name="MURWallLightBase" or @Name="MURWallLightVIIBase"]/costList</xpath>
                        <value>
                            <costList>
                                <Glass>1</Glass>
                                <Steel>10</Steel>
                            </costList>
                        </value>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>

</Patch>