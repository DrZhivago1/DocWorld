<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--We will be moving all furniture to the "Furniture" tab, and moving all light sources to the "Lighting" tab-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>More Furniture [1.0]</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <!--DesignationCategoriesMF-->
        <li Class="PatchOperationRemove">
          <xpath>Defs/DesignationCategoryDef[defName="ANON2MF"]</xpath>
        </li>
        <!--Buildings_MoreFurnitureBasicStuff-->
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Anon2SquarePlantPot"]/designationCategory</xpath>
          <value>
            <designationCategory>Furniture</designationCategory>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="Anon2PlantSpot"]/designationCategory</xpath>
