<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Move "RIMKea" floors to "Floors" tab-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>RIMkea</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/TerrainDef[@Name="RIKStoneFloorBase"]/designationCategory</xpath>
          <value>
            <designationCategory>Floors</designationCategory>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/TerrainDef[@Name="RIKWoodFloorBase"]/designationCategory</xpath>
          <value>
            <designationCategory>Floors</designationCategory>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
