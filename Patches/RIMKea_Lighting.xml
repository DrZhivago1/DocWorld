<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Move "RIMKea" lights to "Lighting" tab-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>RIMkea</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[@Name="RIKWallLampBase"]/designationCategory</xpath>
          <value>
            <designationCategory>Lighting</designationCategory>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[@Name="RIKLampBase2"]/designationCategory</xpath>
          <value>
            <designationCategory>Lighting</designationCategory>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[@Name="RIKLampBase"]/designationCategory</xpath>
          <value>
            <designationCategory>Lighting</designationCategory>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="BOLTASKLamp"]/designationCategory</xpath>
          <value>
            <designationCategory>Lighting</designationCategory>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
