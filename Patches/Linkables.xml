            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef/comps/li[@Class="CompProperties_AffectedByFacilities" and linkableFacilities/li[text()="VitalsMonitor"]]/linkableFacilities</xpath>
