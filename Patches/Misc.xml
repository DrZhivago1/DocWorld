            <li Class="PatchOperationReplace">
               <xpath>/Defs/ThingDef[defName="GTF_FishingNetBasic"]/comps/li[@Class="GTU_Processor.CompProperties_GTProcessor"]/durationIntervalRange</xpath>
               <value>
                  <durationIntervalRange>
