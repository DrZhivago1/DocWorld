<Patch>
   <!--This file will contain all miscellaneous patches that replace/change all sorts of things from various mods-->

   <!--==========
    Vanilla
    ==========-->

   <!--Add a melting mechanoid recipe for low tech colonies-->
   <Operation Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
         <li Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
               <RecipeDef ParentName="ButcherCorpseMechanoidBase">
                  <defName>DZ_MeltCorpseMechanoid</defName>
                  <label>melt mechanoid</label>
                  <description>Melt a dead mechanoid with a smelter to salvage usable material. Slightly faster than smashing it.</description>
                  <jobString>Melting mechanoid.</jobString>
                  <workAmount>400</workAmount>
                  <soundWorking>Recipe_Smelt</soundWorking>
               </RecipeDef>
            </value>
         </li>
         <li Class="PatchOperationInsert">
            <xpath>/Defs/ThingDef/recipes/li[text()="SmeltApparel"]</xpath>
            <value>
               <li>DZ_MeltCorpseMechanoid</li>
            </value>
         </li>
      </operations>
   </Operation>

   <!--Allow butcher spot and crafting spot to be placed on furniture-->
   <Operation Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
         <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName="ButcherSpot" or defName="CraftingSpot"]/altitudeLayer</xpath>
            <value>
               <altitudeLayer>MoteOverhead</altitudeLayer>
            </value>
         </li>
         <li Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName="ButcherSpot" or defName="CraftingSpot"]/building</xpath>
            <value>
               <isEdifice>false</isEdifice>
               <canBuildNonEdificesUnder>true</canBuildNonEdificesUnder>
            </value>
         </li>
         <li Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName="ButcherSpot" or defName="CraftingSpot"]</xpath>
            <value>
               <clearBuildingArea>false</clearBuildingArea>
            </value>
         </li>
      </operations>
   </Operation>

   <!--==========
    Expanded Roofing
    ==========-->

   <!--Get rid of the annoying square shadows with glass roof-->
   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>Expanded Roofing</li>
      </mods>
      <match Class="PatchOperationSequence">
         <success>Always</success>
         <operations>
            <li Class="PatchOperationAdd">
               <xpath>/Defs/ThingDef[defName="RoofTransparentFraming"]</xpath>
               <value>
                  <castEdgeShadows>false</castEdgeShadows>
               </value>
            </li>
         </operations>
      </match>
   </Operation>

   <!--==========
    Fish Industry
    ==========-->

   <!--Allow rotation of aquaculture basin (microfungus texture edited due to this), Stuff the pier-->
   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>FishIndustry</li>
      </mods>
      <match Class="PatchOperationSequence">
         <success>Always</success>
         <operations>
            <li Class="PatchOperationReplace">
               <xpath>/Defs/ThingDef[defName="AquacultureBasin"]/rotatable</xpath>
               <value>
                  <rotatable>true</rotatable>
               </value>
            </li>
            <li Class="PatchOperationReplace">
               <xpath>/Defs/ThingDef[defName="FishingPier"]/costList</xpath>
               <value>
                  <costStuffCount>200</costStuffCount>
                  <stuffCategories>
                     <li>Stony</li>
                     <li>Metallic</li>
                     <li>Woody</li>
                  </stuffCategories>
               </value>
            </li>
         </operations>
      </match>
   </Operation>

