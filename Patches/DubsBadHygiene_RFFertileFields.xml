<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Redundant removal of "Dub's Bad Hygiene" composting and biosolids with "RF Fertile Fields".-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Dubs Bad Hygiene</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>[RF] Fertile Fields [1.0]</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <li Class="PatchOperationAdd">
            <xpath>Defs/ResearchProjectDef[defName="RFF_Farming"]</xpath>
             <value>
               <prerequisites>
                 <li>SewageSludgeComposting</li>
               </prerequisites>
             </value>
           </li>
           <li Class="PatchOperationReplace">
             <xpath>Defs/ResearchProjectDef[defName="WaterFiltration"]/techLevel</xpath>
             <value>
               <techLevel>Industrial</techLevel>
             </value>
           </li>
          <li Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="BiosolidsComposter" or defName="BiosolidFertilizer"]/designationCategory</xpath>
            <value>
              <designationCategory>RFF_Farm</designationCategory>
            </value>
          </li>
          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="IrrigationSprinkler"]</xpath>
            <value>
              <designationCategory>RFF_Farm</designationCategory>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="BiosolidsComposter" or defName="BiosolidFertilizer"]/designationCategory</xpath>
            <value>
              <designationCategory>RFF_Farm</designationCategory>
            </value>
          </li>
            <li Class="PatchOperationAdd">
              <xpath>Defs/ThingDef[defName="Terraform_SoilF-SoilRich"]/costList</xpath>
              <value>
                  <FecalSludge>10</FecalSludge>
              </value>
            </li>
              <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="Terraform_Topsoil-DirtFert"]/costList</xpath>
                <value>
                    <Biosolids>10</Biosolids>
                </value>
              </li>
              <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="Terraform_SoilRich-SoilTilled"]/costList</xpath>
                <value>
                    <Biosolids>15</Biosolids>
                </value>
              </li>
        </operations>
      </match>
    </match>
  </Operation>
</Patch>
